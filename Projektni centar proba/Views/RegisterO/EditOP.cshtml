@model Projektni_centar_proba.Models.Obrasac
<style>
    .button {
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        border: solid 1px #20538D;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
        -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        background: #4479BA;
        color: #FFF;
        padding: 8px 12px;
        text-decoration: none;
    }
</style>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group">
            <label>Naziv skole:</label>
            @Html.TextBoxFor(x => x.NazivSkole, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Adresa:</label>
            @Html.TextBoxFor(x => x.AdresaReg, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Opstina:</label>
            @Html.TextBoxFor(x => x.Opstina, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Postanski broj:</label>
            @Html.TextBoxFor(x => x.PostaBr, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Maticni broj skole:</label>
            @Html.TextBoxFor(x => x.MatBrSkole, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>PIB:</label>
            @Html.TextBoxFor(x => x.PIB, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Broj racuna:</label>
            @Html.TextBoxFor(x => x.BrojRacuna, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Web stranica:</label>
            @Html.TextBoxFor(x => x.Web, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Ime:</label>
            @Html.TextBoxFor(x => x.Ime, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Prezime:</label>
            @Html.TextBoxFor(x => x.Prezime, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Radno mesto:</label>
            @Html.TextBoxFor(x => x.RadnoMes, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Vrsta telefona (kancelarijski, sluzbeni,mobilni):</label>
            @Html.TextBoxFor(x => x.VrstaTel, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Broj telefona:</label>
            @Html.TextBoxFor(x => x.BrTel, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Lokal:</label>
            @Html.TextBoxFor(x => x.Lokal, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Vrsta emaila(posao, privatni):</label>
            @Html.TextBoxFor(x => x.VrstaEmail, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Email:</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Beleske:</label>
            @Html.TextBoxFor(x => x.Beleske, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            <label>Trenutna slika</label>
            @{ if (Model.FotoPecat != null)
                {
                    var base64 = Convert.ToBase64String(Model.FotoPecat);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                    <img src='@imgsrc' style="max-width:100px" ;max-height:100px" />
                }
                else
                {
                    <p>Nema slike</p>
                }

            }
        </div>
        
            <a href="javascript:window.print()" class="button">Print</a>
            <a href="/Register/AfterLogin" class="button">Nazad</a>
        
    </div>
}





@model List<Projektni_centar_proba.Models.SiteUser>
<style>
    .button {
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        border: solid 1px #20538D;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
        -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        background: #4479BA;
        color: #FFF;
        padding: 8px 12px;
        text-decoration: none;
    }
</style>
<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Tip korisnika</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                if (Model[i].IsValid == true)
                {
                    <tr>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].Username</td>
                        <td>@Model[i].Password</td>
                        <td>@Model[i].TipKorisnika</td>
                        <td>
                            <a href="@Url.Action("Delete", new { id = Model[i].ID })"><i class="glyphicon glyphicon-trash"></i></a>
                            <a href="@Url.Action("Edit", new { id = Model[i].ID })"><i class="glyphicon glyphicon-edit"></i></a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
    <a href="/Register/AfterLogin" class="button">Nazad</a>
</div>


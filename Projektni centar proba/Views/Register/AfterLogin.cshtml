
@{
    ViewBag.Title = "Profil";
}

<style>
    .button {
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        border: solid 1px #20538D;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
        -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
        background: #4479BA;
        color: #FFF;
        padding: 8px 12px;
        text-decoration: none;
    }
   
    .center {

       border-radius: 35px;
        margin: auto;
        width: 40%;
        border: 3px solid black;
        padding: 10px;
        background-color: lightgray  ;
    }
    .center1 {
        border-radius: 20px;
        margin: auto;
        width: 30%;
        border: 3px solid black;
        background-color: lightgray;
    }
    
    
</style>
<br />

<div class="center1">
    <h2 align="center">Profilna stranica</h2>
</div><br />
@if (Session["UserID"] != null)
{
      <div class="center">
          <p align="center">
              <b><i> Dobrodošli:</i></b>
              <a href="#"> @Session["UserName"] </a>
          </p>
          <p align="center"><b><i> Tip korisnika:</i></b><a href="#"> @Session["TipKorisnika"] </a></p> <br /><br />
          @if ((string)Session["TipKorisnika"] == "Admin")
          {
              <p align="center"><a href="/Register/AddNewUser" class="button">Dodaj novog korisnika</a><br /><br />
              <a href="/Register/ShowDataBaseForUser" class="button">Lista korisnika</a><br /><br />
              <a href="/RegisterO/SetDataInDataBaseO" class="button">Popuni obrazac</a><br /><br />
              <a href="/RegisterO/ShowDataBaseForUserO" class="button">Lista obrazaca</a><br /></p>
          }
          else if ((string)Session["TipKorisnika"] == "Korisnik")
          {
              <p align="center">
                  <a href="/RegisterO/SetDataInDataBaseO" class="button">Popuni obrazac</a><br /><br />
                  <a href="/RegisterO/ShowDataBaseForUserOK" class="button">Sačuvani obrasci</a>
              </p><br /><br />
          }
          else
          {
                        <p align="center"><a href="/RegisterO/ShowDataBaseForUserOP" class="button">Lista obrazaca</a></p><br /><br />
          }
          <br />
          <br />
          <p align="center"><a href="/Register/Logout" class="button"> Logout</a></p>
      </div>
}